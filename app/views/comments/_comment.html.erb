<div class="media">

  <div class="col-xs-12">

    <div class="media-left">

      <%= link_to user_path(comment.author) do %>
        <%= image_tag 'user_silhouette_generic.gif', id: 'user-photo', class: 'media-object', size: '50x50', alt: "Commenter's photo" %>
      <% end %>

    </div>

    <div class="media-body">

      <div class="media-heading">

        <%= link_to comment.author.profile.full_name, user_path(comment.author) %>

        <time datetime=<%= comment.created_at %> pubdate>
          <small>Said on <%= comment.created_at %></small>
        </time>

      </div>

      <p><%= comment.body %></p>

    </div>
      <%# render :partial => 'likes/likes', :locals => { :liked_object => comment } %>


  </div>

</div>

