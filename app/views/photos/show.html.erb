<main class="container content-container">

  <%= render :partial => "shared/header", :locals => { :user => @user } %>



<!-- Start of main About section -->
  <section id="photos" class="row">

    <div class="row">
      <div class="col-md-12">

        <div class="panel panel-default">


          <div class="panel-heading">
            <div class="row">

              <div class="col-xs-4 col-xs-offset-4 text-center">
                <h1 class="panel-title">Photos</h1>
              </div>

            </div>

          </div> <!-- end of panel heading -->




          <div class="panel-body">
            <div class="row">


              <!-- LEFT SIDE -->
              <div class="col-md-8">
                <%= image_tag @photo.photo.url(:medium) %>
              </div>

              <!-- RIGHT SIDE -->
              <div class="col-md-4">


                <div class="media">

                  <div class="col-md-12">

                    <!-- Media list image -->
                    <div class="media-left">
                      <%= link_to user_path(@photo.owner) do %>
                        <%= image_tag 'user_silhouette_generic.gif', id: 'user-photo', class: 'media-object', size: '50x50', alt: "Photo owner's photo" %>
                      <% end %>
                    </div>  <!-- end of image section -->


                    <!-- Photo owner name and posted date -->
                    <div class="media-body">
                      <div class="media-heading">

                        <%= link_to @photo.owner.profile.full_name, user_path(@photo.owner) %>

                        <br>

                        <time datetime=<%= @photo.photo_updated_at %> pubdate>
                          <small><%= @photo.photo_updated_at %></small>
                        </time>

                      </div>
                    </div> <!-- media-body -->
                  </div>
                </div> <!-- media object -->


              </div>


            </div>

          </div> <!-- end of panel body -->



        </div> <!-- end of panel -->

      </div>
    </div>
  </section>




</main> <!-- container -->